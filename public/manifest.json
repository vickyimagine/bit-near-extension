{
  "manifest_version": 3,
  "name": "BIT-Wallet",
  "version": "1.0",
  "permissions": [
    "webNavigation",
    "storage",
    "activeTab",
    "tabs",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject-script.js",
        "connection-popup.html",
        "connection-popup.js",
        "password-popup.html",
        "password-popup.js"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
