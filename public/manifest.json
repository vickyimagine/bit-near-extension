{
  "manifest_version": 3,
  "name": "Bitwallet",
  "version": "4.9.2",
  "permissions": ["activeTab", "storage", "background"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject-script.js",
        "connection-popup.html",
        "connection-popup.js",
        "password-popup.html",
        "password-popup.js"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
